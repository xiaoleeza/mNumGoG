\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{NumGoG}[2018/11/11 v1.00 well-designed (TeX)]

\RequirePackage{graphicx}
\RequirePackage{xparse,etoolbox}
\RequirePackage{ifthen}

  

\NewDocumentCommand{\numcircle}{ O{0} O{0.8em} O{-0.15ex} m }{%
  \ifnumgreater{#4}{999}%
      {%
        \typeout{The value of input number is \number#4, larger than 999}%
      }{%
        \ifthenelse{#1=0}{%
            \raisebox{#3}{\includegraphics[height=#2,page={\number\numexpr#4 + 1}]{NumGo.pdf}}%
          }{%
            \raisebox{#3}{\includegraphics[height=#2,page={\number\numexpr#4 + 1001}]{NumGo.pdf}}
          }%
      }% 
}

\endinput
